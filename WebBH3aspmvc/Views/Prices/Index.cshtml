@model IEnumerable<WebBH3aspmvc.Price>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pprice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pdetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.cnam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pprice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pdetails)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.cnam)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.pid }) |
            @Html.ActionLink("Details", "Details", new { id = item.pid }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.pid })|
            @Html.ActionLink("Images", "Images", new { id = item.cid })
        </td>
    </tr>
}

</table>
